        </div>
        
        <div class="status-message" id="status-message" style="display: none;"></div>

        <div class="footer">
            <p>ðŸŽ¶ Broadcasting 24/7 â€¢ True Radio Mode v{{ version }}</p>
            <p><small>
                <a href="/diag" style="color: #888; text-decoration: none;">ðŸ”§ Diagnostics</a> | 
                Server-Controlled Broadcasting
            </small></p>
        </div>
    </div>

    <!-- True radio streaming player -->
    <script src="/static/js/optimized-radio-player.js"></script>
    
    <script>
        // Platform detection for indicator
        document.addEventListener('DOMContentLoaded', function() {
            const indicator = document.getElementById('platform-indicator');
            const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;
            const isAndroid = /Android/i.test(navigator.userAgent);
            const isMobile = /Mobi|Android/i.test(navigator.userAgent);
            
            let platform = 'Desktop';
            if (isIOS) platform = 'iOS';
            else if (isAndroid) platform = 'Android';
            else if (isMobile) platform = 'Mobile';
            
            indicator.textContent = platform;
            
            // Add platform-specific styling
            if (isIOS) {
                indicator.style.background = 'rgba(255, 107, 107, 0.2)';
                indicator.style.color = '#ff6b6b';
            } else if (isAndroid) {
                indicator.style.background = 'rgba(255, 152, 0, 0.2)';
                indicator.style.color = '#FF9800';
            } else if (isMobile) {
                indicator.style.background = 'rgba(76, 175, 80, 0.2)';
                indicator.style.color = '#4CAF50';
            }
        });
    </script>
</body>
</html>